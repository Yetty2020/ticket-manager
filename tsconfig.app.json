{
  // Inherits base settings from the main tsconfig.json file
  "extends": "./tsconfig.json",
  "compilerOptions": {
    // Enable incremental compilation
    "composite": true,
    
    // Set the output directory for built files
    "outDir": "./dist",

    // Specify the module system for the generated code
    "module": "ESNext", 
    
    // How modules are resolved (modern bundler setting)
    "moduleResolution": "bundler",
    
    // Enable JSX support and specify the factory function (React 17+)
    "jsx": "react-jsx",

    // List of available libraries for type checking (e.g., browser APIs, modern JS features)
    "lib": ["DOM", "DOM.Iterable", "ES2022"],
    
    // Ensure all type definitions found are included
    "skipLibCheck": true
  },
  // Only process files located within the 'src' directory
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  // Exclude node_modules from compilation
  "exclude": ["node_modules"]
}
